{
  "info": {
    "name": "Activity Booking API",
    "description": "Complete API collection for testing the Activity Booking system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "signup"]
            }
          }
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/login",
              "host": ["{{base_url}}"],
              "path": ["api", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.environment.set('auth_token', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Activities",
      "item": [
        {
          "name": "Get All Activities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/activities",
              "host": ["{{base_url}}"],
              "path": ["api", "activities"]
            }
          }
        },
        {
          "name": "Get Activities with Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/activities?page=1&limit=5",
              "host": ["{{base_url}}"],
              "path": ["api", "activities"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Search Activities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/activities?search=hiking",
              "host": ["{{base_url}}"],
              "path": ["api", "activities"],
              "query": [
                {
                  "key": "search",
                  "value": "hiking"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Location",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/activities?location=Rocky Mountains",
              "host": ["{{base_url}}"],
              "path": ["api", "activities"],
              "query": [
                {
                  "key": "location",
                  "value": "Rocky Mountains"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Activity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/activities/{{activity_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "activities", "{{activity_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Book an Activity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"activityId\": \"{{activity_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/book",
              "host": ["{{base_url}}"],
              "path": ["api", "book"]
            }
          }
        },
        {
          "name": "Get My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/my-bookings",
              "host": ["{{base_url}}"],
              "path": ["api", "my-bookings"]
            }
          }
        },
		{
			"name": "Cancel Booking",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/cancel-booking?id={{booking_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "cancel-booking"],
					"query": [
						{
							"key": "id",
							"value": "{{booking_id}}",
							"description": "ID of the booking to cancel"
						}
					]
				},
				"description": "Cancel a user's booking. Only works for future bookings. Requires authentication."
			},
			"response": []
		}
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "activity_id",
      "value": "",
      "type": "string"
    }
  ]
}
